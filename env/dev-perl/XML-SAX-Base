
. /etc/portage/env/scripts/mv_patch .

post_src_install() {
	mv_start && find "$ED" -type d -name 'SAX' -exec /bin/sh -c \
'for i
do	j=$i/ParserDetails.ini
	if test -r "$j"
	then	echo "File $j already exists"
		exit 1
	fi
	echo "Generating $j"
	cat >"$j" <<EOF
[XML::SAX::PurePerl]
http://xml.org/sax/features/namespaces = 1

[XML::LibXML::SAX::Parser]
http://xml.org/sax/features/namespaces = 1

[XML::LibXML::SAX]
http://xml.org/sax/features/namespaces = 1



EOF
done' sh '{}' ';'
	mv_end
}
