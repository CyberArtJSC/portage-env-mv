
. /etc/portage/env/scripts/mv_patch -

post_src_prepare() {
	mv_start
	local f l
	l=/usr/`get_libdir`/libreoffice/
	l=${l}program/:${l}ure/lib/
	l='2iexport LD_LIBRARY_PATH=$LD_LIBRARY_PATH${LD_LIBRARY_PATH:+:}'$l
	f=`find "$S" -name soffice.sh`
	sed -i -e "$l" -- "$f" && sed -i -e "$l" -- "${f%/*}/unopkg.sh"
	mv_end
}
